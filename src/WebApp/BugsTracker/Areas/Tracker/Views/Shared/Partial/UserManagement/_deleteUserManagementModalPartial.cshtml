@model ManageUserStateViewModel

<div class="modal-header">
    <h5 class="modal-title text-center" id="exampleModalLongTitle"><i class="fa fa-exclamation-triangle text-danger" aria-hidden="true"></i> Delete user <i class="fa fa-exclamation-triangle text-danger" aria-hidden="true"></i> </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@if (User.IsInRole("Admin"))
{
    <form asp-controller="User" asp-action="Delete" asp-route-page="@Model.Page">
        <input type="hidden" name="uid" value="@Model.Uid" />
        <div class="modal-body text-center">
            <p>You are about to delete the user <span class="text-purple font-weight-bold" id="lock-user-name"></span>.</p>
            <p>Deleting the user will result in the loss of <u>every related data and access.</u></p>
            <p>Type <span class="text-green">Synchronize</span> to authorize the operation:</p>
            <input type="text" id="synchronize-validation" />
        </div>
        <div class="modal-footer text-center">
            <input type="submit" class="x-btn green" id="lock-btn" value="Delete User" />
        </div>
    </form>
}
@if (User.IsInRole("Demo Admin"))
{
    <div class="modal-body text-center">
        <p>You are about to delete the user <span class="text-purple font-weight-bold" id="lock-user-name"></span>.</p>
        <p>Deleting the user will result in the loss of <u>every related data and access.</u></p>
        <p>Type <span class="text-green">Synchronize</span> to authorize the operation:</p>
        <input type="text" id="synchronize-validation" />
    </div>
    <div class="modal-footer text-center">
        <button type="button" class="x-btn green" id="lock-btn">Delete user</button>
    </div>
}



