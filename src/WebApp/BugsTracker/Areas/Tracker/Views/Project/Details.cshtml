@section scripts {
    <script src="~/lib/Chart.js/chart.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $("#sectionName").text("Bug Tracker");

            $("#cancelTeamAdd , #cancelTeamRemove").click(() => {
                $(".modal-footer").removeClass("d-none");
                $("#teamDisplay").removeClass("d-none");
                $(".team-add-container").addClass("d-none");
                $(".team-remove-container").addClass("d-none");

            });

            $(".add-member-btn").click(() => {
                $(".modal-footer").addClass("d-none");
                $("#teamDisplay").addClass("d-none");
                $(".team-add-container").removeClass("d-none");
            });

            $(".delete-team-member").click(() => {
                $(".modal-footer").addClass("d-none");
                $("#teamDisplay").addClass("d-none");
                $(".team-remove-container").removeClass("d-none");
            });

            $(".ticket-link").click(() => {
                let btn = $("#show-comments-btn");
                btn.text("Show Comments")
                btn.addClass("blue-btn");
                btn.removeClass("yellow-btn");
                $("#ticket-details-modal-label").text("Ticket details");
                $("#ticket-details").removeClass("d-none");
                $("#comments").addClass("d-none");
            });

            $("#show-comments-btn").click(() => {
                $("#ticket-details").toggleClass("d-none");
                $("#comments").toggleClass("d-none");

                if ($(event.target).hasClass("blue-btn")) {
                    $(event.target).text("Show Ticket Details")
                    $(event.target).removeClass("blue-btn");
                    $(event.target).addClass("yellow-btn");
                    $("#ticket-details-modal-label").text("Write to your team");


                }
                else {
                    $(event.target).text("Show Comments")
                    $(event.target).addClass("blue-btn");
                    $(event.target).removeClass("yellow-btn");
                    $("#ticket-details-modal-label").text("Ticket details");
                }
            });

        });


    </script>
}