
@{
    ViewData["Title"] = "Pending";
}

<div class="wrapper d-flex flex-column align-items-center justify-content-center" style="min-height:350px">
    <div class="logo m-0"><i class="fas fa-check"></i> </div>
    <div class="text-center mt-auto name"> Pending </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="text-danger text-center  validation-summary-errors">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
    }
    <p>You are registered with Bug Tracker but waiting for an approval from the admin side.</p>

    <div class="mt-auto">
        <div class="text-center fs-6"> <a asp-action="Login">Login</a></div>
        <div class="text-center fs-6"> <a asp-action="DemoLogin">Log as Demo User</a></div>
    </div>
</div>

